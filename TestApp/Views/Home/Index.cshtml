@model TestApp.Models.ModelTotal
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron jumbotron-fluid">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1 class="display-4">HCID Look Up Project</h1>
        <p class="lead">Yeah It's a lookup tool</p>
    </div>
</div>
<div class="container">
    <div class="row">
        <h2>Lookup Tool</h2>
        <b>Fill in your keywords and hit "Search"</b>
        <br />
        <br />
        <br />
        <br />
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <p>Street Address</p>@Html.TextBox("StreetAddress")
            <input type="submit" value="Search" />
        }
    </div>
    <div class="row">
        @if (Model != null)
        {
            <div class="col-md-6">
                <h3> Bims Data</h3>
                @foreach (var item in Model.Bims2List)
                {
                    <p><b>APN: </b>@item.APN</p>
                    <p><b>Statement Number: </b>@item.StatementNum </p>
                    <p><b>Statement Date: </b>@item.StatementDate </p>
                    <p><b>Property Address: </b>@item.Property_Address </p>
                    <p><b>Property City_State_Zip: </b>@item.Property_City_State_Zip </p>
                }
            </div>
            <div class="col-md-6">
                <h3> Rent Data</h3>
                @foreach (var item in Model.Rent2List)
                {
                    <p><b>APN: </b>@item.APN</p>
                    <p><b>Property Address: </b>@item.Property_Address </p>
                    <p><b>Service Date: </b>@item.Service_Date</p>
                    <p><b>Property Address: </b>@item.Property_Address </p>
                    <p><b>Land_Use_Code: </b>@item.Land_Use_Code</p>
                    <p><b>Unit Count: </b>@item.Unit_Count </p>
                }
            </div>
        }
    </div>
</div>
